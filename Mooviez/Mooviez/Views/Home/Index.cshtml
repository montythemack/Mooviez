@{
    ViewBag.Title = "Home Page";
    var selected = ViewData["selected"] as IEnumerable<SelectListItem>;
}


    
    <div class="row">
        <form method="post">
            <div class="input-field col s6">
                <select name="genre" id="genre" multiple>
                    <option value="" disabled selected>Select a genre</option>
                    @foreach (var item in (ViewData["genre"] as List<Mooviez.Models.Genre>))
                    {
                        <option value="@item.id">@item.name</option>
                    }
                </select>

            </div>
            <div class="col s6" style="margin-top:25px">
                <button type="submit" name="submit" class="waves-effect waves-light btn">Submit</button>
            </div>
         
        </form>
        </div>
       @{ if (Model != null)
           {
            <div class="row">
                
                @foreach (var item in Model.results)
                {
                    
                        <div class="col s3">
                            <div class="card hoverable">
                                <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator" src="@ViewData["baseURL"]@ViewData["imageSize"]@item.poster_path">
                                </div>
                                <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4" style="font-size:14px">@item.title<i class="material-icons right">close</i></span>
                                    <p style="font-size:12px">@item.overview</p>
                                </div>
                            </div>
                        </div>
                   
                }
                
            </div>

           }
   }
    
